# ===========================================
# SJH Accounting - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Directus CMS
DIRECTUS_URL=http://localhost:8055
DIRECTUS_WEBSOCKET_URL=ws://localhost:8055/websocket
DIRECTUS_STATIC_TOKEN=your-admin-token-here

# Session (must be at least 32 characters for nuxt-auth-utils)
NUXT_SESSION_PASSWORD=your-super-secret-session-password-min-32-chars

# SendGrid Email
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@sjhaccounting.com
NOTIFICATION_EMAIL=sjh@sjhas.com

# Google Analytics
NUXT_PUBLIC_GTAG_ID=

# Site Configuration
SITE_URL=http://localhost:3000
